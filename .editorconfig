root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 100

[*.ts]
quote_type = double
ij_json_keep_trailing_comma = false
ij_typescript_force_quote_style = true
ij_typescript_enforce_trailing_comma = remove

[*.html]
max_line_length=120

[*.md]
max_line_length=80
trim_trailing_whitespace = false
